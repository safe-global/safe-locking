{
  "plugins": ["prettier-plugin-solidity"],
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false
      }
    }
  ],
  "tabWidth": 2,
  "printWidth": 140,
  "trailingComma": "all",
  "singleQuote": true,
  "semi": false
}
